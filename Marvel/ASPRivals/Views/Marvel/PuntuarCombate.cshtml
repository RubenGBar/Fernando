@model ASPRivals.Models.VM.CombateConListadoDePersonajes

@{
    ViewData["Title"] = "Puntuar Combate";
}

<h1>Puntuar Combate</h1>

<!-- Mostrar mensaje -->
@if (ViewBag.mensaje != null)
{
    <div class="alert @(ViewBag.exito == "true" ? "alert-success" : "alert-danger")" role="alert">
        @ViewBag.mensaje
    </div>
}

<form asp-action="PuntuarCombate" method="post">
    <div class="form-group">
        <label for="IdCombatiente1">Combatiente 1</label>
        <select asp-for="IdCombatiente1" class="form-control" asp-items="@(new SelectList(Model.listadoPersonajesConPuntuacion, "ID", "Nombre", Model.IdCombatiente1))">
            <option value="">-- Selecciona un personaje --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="PuntosCombatiente1">Puntuación para Combatiente 1</label>
        <select asp-for="PuntosCombatiente1" class="form-control">
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
    </div>

    <hr />

    <div class="form-group">
        <label for="IdCombatiente2">Combatiente 2</label>
        <select asp-for="IdCombatiente2" class="form-control" asp-items="@(new SelectList(Model.listadoPersonajesConPuntuacion, "ID", "Nombre", Model.IdCombatiente2))">
            <option value="">-- Selecciona un personaje --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="PuntosCombatiente2">Puntuación para Combatiente 2</label>
        <select asp-for="PuntosCombatiente2" class="form-control">
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Enviar Puntuación</button>
    <p>
        @Html.ActionLink("Volver a la lista de personajes", "Index", null, new { @class = "btn btn-secondary" })
    </p>
</form>